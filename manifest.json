{
    "manifest_version": 3,
    "name": "Nice to (re-)Meet You",
    "description": "Remove pesky article reading limits by clearing local storage",
    "version": "1.0",
    "icons": {
        "16": "images/remeet-16.png",
        "32": "images/remeet-32.png",
        "48": "images/remeet-48.png",
        "128": "images/remeet-128.png"
    },
    "action": {
        "default_icon": {
            "16": "images/remeet-16.png",
            "32": "images/remeet-32.png",
            "48": "images/remeet-48.png",
            "128": "images/remeet-128.png"
        }
    },
    "permissions": ["activeTab", "storage", "scripting"],
    "background": {
        "service_worker": "background.js"
    }
}
